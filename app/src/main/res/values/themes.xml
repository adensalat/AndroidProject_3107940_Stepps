<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Material Components -->
    <style name="Theme.Stepps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>

        <!-- Navigation bar (bottom) -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primary</item>
    </style>
</resources>